<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.HxBuddyFragment">

    <com.hjq.bar.TitleBar
        android:id="@+id/titleBar5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backButton="false"
        app:rightIcon="@mipmap/search"
        app:title="好友"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_hx_buddy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/titleBar5" />

    <com.example.frameapp.util.views.LetterIndexView
        android:id="@+id/lv_hx_buddy"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        app:layout_constraintTop_toBottomOf="@+id/titleBar5"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="387dp" />

</androidx.constraintlayout.widget.ConstraintLayout>